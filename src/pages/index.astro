---
import "../styles/style.css";
import Circles from "../components/circles.astro";
import Header from "../components/Header.astro";
import Main from "../components/Main.astro";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>ToDoApp</title>
  </head>
  <body
    class="min-h-screen
         bg-gradient-to-b from-slate-100 via-white to-gray-100
         dark:from-[#0f172a] dark:via-[#071029] dark:to-[#020617]
         text-gray-900 dark:text-gray-200
         font-sans
         transition-colors duration-700 ease-in-out"
  >
    <script>
      tailwind.config = {
        darkMode: "class",
        theme: {
          extend: {
            fontFamily: {
              sans: ["Inter", "Vazirmatn", "system-ui", "sans-serif"],
            },
            colors: {
              primary: "#7c3aed",
            },
          },
        },
      };
    </script>
    <div class="max-w-3xl mx-auto px-6 py-10 flex flex-col min-h-screen">
      <Circles />
      <Header />
      <Main />
    </div>
  </body>
</html>
