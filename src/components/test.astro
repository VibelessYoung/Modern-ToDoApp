---
import "../styles/style.css";
---

<div
  aria-hidden
  class="pointer-events-none fixed inset-0 -z-10 overflow-hidden"
>
  <div
    class="absolute -left-32 -top-20 w-72 h-72 bg-purple-700 opacity-30 rounded-full blur-3xl animate-blob"
  >
  </div>
  <div
    class="absolute right-0 top-24 w-56 h-56 bg-emerald-500 opacity-20 rounded-full blur-2xl animate-blob animation-delay-2000"
  >
  </div>
  <div
    class="absolute left-1/3 bottom-10 w-96 h-96 bg-indigo-600 opacity-18 rounded-full blur-4xl"
  >
  </div>
</div>

<div class="max-w-3xl mx-auto px-6 py-10 flex flex-col min-h-screen">
  <!-- Header -->
  <header class="flex items-center justify-between mb-8">
    <div class="flex items-center gap-3">
      <div
        class="w-12 h-12 rounded-2xl bg-gradient-to-br from-purple-500 to-indigo-500 flex items-center justify-center shadow-lg glow"
      >
        <svg
          xmlns="http://www.w3.org/2000/svg"
          fill="none"
          viewBox="0 0 24 24"
          stroke-width="1.5"
          stroke="currentColor"
          class="size-6"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            d="M10.125 2.25h-4.5c-.621 0-1.125.504-1.125 1.125v17.25c0 .621.504 1.125 1.125 1.125h12.75c.621 0 1.125-.504 1.125-1.125v-9M10.125 2.25h.375a9 9 0 0 1 9 9v.375M10.125 2.25A3.375 3.375 0 0 1 13.5 5.625v1.5c0 .621.504 1.125 1.125 1.125h1.5a3.375 3.375 0 0 1 3.375 3.375M9 15l2.25 2.25L15 12"
          ></path>
        </svg>
      </div>
      <div>
        <h1 class="text-lg font-semibold">Do it.</h1>
        <p class="text-sm text-slate-400">Now or Never</p>
      </div>
    </div>

    <div class="flex items-center gap-3">
      <button
        id="themeToggle"
        class="inline-flex items-center gap-2 px-3 py-1.5 rounded-full bg-white/6 hover:bg-white/9 transition"
      >
        <svg id="moon" class="w-5 h-5" viewBox="0 0 24 24" fill="none"
          ><path
            d="M21 12.79A9 9 0 1111.21 3 7 7 0 0021 12.79z"
            stroke="currentColor"
            stroke-width="1.4"
            stroke-linecap="round"
            stroke-linejoin="round"></path></svg
        >
        <span class="text-sm">Light - Dark</span>
      </button>
    </div>
  </header>

  <!-- Main card -->
  <main class="flex-1 grid place-items-center">
    <section class="w-full">
      <div class="mx-auto max-w-xl">
        <div
          class="p-6 frosted bg-white/3 rounded-2xl border border-white/6 shadow-2xl"
        >
          <div class="flex gap-3">
            <svg
              xmlns="http://www.w3.org/2000/svg"
              fill="none"
              viewBox="0 0 24 24"
              stroke-width="1.5"
              stroke="currentColor"
              class="size-6"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                d="M2.25 15a4.5 4.5 0 0 0 4.5 4.5H18a3.75 3.75 0 0 0 1.332-7.257 3 3 0 0 0-3.758-3.848 5.25 5.25 0 0 0-10.233 2.33A4.502 4.502 0 0 0 2.25 15Z"
              ></path>
            </svg>

            <p class="text-sm text-slate-300 mb-4">
              Write your tasks and do your tasks !
            </p>
          </div>

          <form id="todoForm" class="flex items-center gap-4">
            <label for="newTodo" class="sr-only">add a todo</label>
            <input
              id="newTodo"
              type="text"
              placeholder="Type something..."
              autocomplete="off"
              class="flex-1 rounded-full py-3 px-4 bg-white/6 placeholder:text-slate-400 outline-none ring-1 ring-white/3 focus:ring-2 focus:ring-primary transition frosted"
            />

            <button
              id="addBtn"
              aria-label="Add todo"
              class="w-14 h-14 rounded-full bg-gradient-to-br from-purple-500 to-indigo-500 shadow-lg flex items-center justify-center transform transition hover:scale-105 active:scale-95"
            >
              <svg
                width="28"
                height="28"
                viewBox="0 0 24 24"
                fill="none"
                aria-hidden
              >
                <path
                  d="M12 5v14M5 12h14"
                  stroke="white"
                  stroke-width="1.8"
                  stroke-linecap="round"
                  stroke-linejoin="round"></path>
              </svg>
            </button>
          </form>
        </div>
      </div>
    </section>
  </main>
</div>
